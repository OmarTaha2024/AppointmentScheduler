<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Appointment Scheduler</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

    <!-- Default Theme Stylesheet (Will be updated by JS) -->
    <link id="themeStylesheet" rel="stylesheet" href="~/css/light.css" />

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        // Apply the theme as early as possible to prevent "flashing"
        document.addEventListener("DOMContentLoaded", function () {
            let theme = localStorage.getItem("theme") || "light";
            document.getElementById("themeStylesheet").setAttribute("href", "/css/" + theme + ".css");
        });
    </script>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Appointment" asp-action="Index">Appointment Scheduler</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto"> </ul>

                <!-- Theme Toggle Buttons -->
                <div class="d-flex">
                    <button id="lightThemeBtn" class="btn btn-light me-2">Light Theme</button>
                    <button id="darkThemeBtn" class="btn btn-dark">Dark Theme</button>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container mt-4">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="text-center mt-5">
        <p>&copy; 2025 - Appointment Scheduler</p>
    </footer>

    <!-- Theme Switcher -->
    <script>
        $(document).ready(function () {
            let theme = localStorage.getItem("theme") || "light";
            setTheme(theme);

            $("#lightThemeBtn").click(function () {
                setTheme("light");
            });

            $("#darkThemeBtn").click(function () {
                setTheme("dark");
            });

            function setTheme(theme) {
                localStorage.setItem("theme", theme);
                $("#themeStylesheet").attr("href", "/css/" + theme + ".css");
            }
        });
    </script>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery Validation Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

</body>
</html>
