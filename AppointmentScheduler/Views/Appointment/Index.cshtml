@model IEnumerable<AppointmentScheduler.Models.Appointment>

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>My Appointments</h2>

        <!-- Logout Button -->
        <form asp-controller="Account" asp-action="Logout" method="post">
            <button type="submit" class="btn btn-danger">Logout</button>
        </form>
    </div>

    <div class="d-flex justify-content-end mb-3">
        <a asp-action="Create" class="btn btn-success">+ New Appointment</a>
    </div>

    <table class="table table-hover table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Title</th>
                <th>Date</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var appointment in Model)
            {
                <tr>
                    <td>@appointment.Title</td>
                    <td>@appointment.Date.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@appointment.Description</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@appointment.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@appointment.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
